<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#99F0F8FF"
    android:orientation="vertical" >

    <ImageView android:id="@+id/discuss_image"
       	    
       	    android:layout_height="100px"
       	    android:layout_width="100px"
       	    android:paddingLeft="20px"
       	    android:adjustViewBounds="true"
       	    android:scaleType="centerInside"/>
    <TextView android:id="@+id/discuss_name"
    	    android:text="群名称"
    	    android:paddingLeft="20px"
    	    android:textSize="40px"
    	    android:layout_toRightOf="@+id/discuss_image"
        	android:layout_width="wrap_content"
        	android:textColor="#363636"
        	android:layout_height="wrap_content"/>
    <TextView android:id="@+id/discuss_detail"
    	    android:text="群简介"
    	    android:textSize="28px"
    	    android:paddingLeft="20px"
    	    android:layout_toRightOf="@+id/discuss_image"
    	    android:layout_below="@+id/discuss_name"
        	android:layout_width="wrap_content"
        	android:textColor="#99363636"
        	android:layout_height="wrap_content"/>


</RelativeLayout>