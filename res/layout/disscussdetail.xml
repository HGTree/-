<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

	 <include
        android:id="@+id/discussdetail_bar"
        layout="@layout/discussdetail_bar" />  

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="150px" >
        
        <ImageView android:id="@+id/image_discussdetail"
       	    
       	    android:layout_height="120px"
       	    android:layout_width="120px"
       	    android:layout_marginTop="20px"
       	    android:layout_marginLeft="20px"
       	    android:layout_marginRight="20px"
       	    android:adjustViewBounds="true"
       	    android:scaleType="centerInside"/>
    	<TextView android:id="@+id/discussdetail_name"
    	    android:layout_gravity="center"
    	    android:layout_marginRight="20px"
    	    android:paddingLeft="20px"
    	    android:paddingTop="15px"
    	    android:textSize="40px"
    	    android:layout_toRightOf="@+id/userimage_froum"
        	android:layout_width="match_parent"
        	android:textColor="#363636"
        	android:layout_height="wrap_content"/>
        
    </LinearLayout>

    <LinearLayout style="@style/Register_Input" 
		android:background="@drawable/base_edit_input"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.8" >


        <TextView
            android:id="@+id/discussdetail_detail"
            android:textSize="36px"
            style="@style/Register_Edit" />
    </LinearLayout>

    <Button
        android:id="@+id/discussdetail_adduser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:alpha="0.8"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
		android:background="#00BFFF"
        android:text="邀请好友"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large" />
    <Button
        android:id="@+id/discussdetail_quit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:alpha="0.8"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
		android:background="#00BFFF"
        android:text="退出群聊"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large" />

    <Button
        android:id="@+id/discussdetail_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:alpha="0.8"
        android:background="#FF6347"
        android:text="解散群聊"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>